<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-12 my-3">
      <h1 class="text-center">Cadastre-se </h1>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-4"></div>

    <div class="col-lg-4 my-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title text-center">Preencha os Campos</h5>
          
          <form action="/user/cadastro/post" method="post">
            <div class="form-group">
              <label for="nome">Nome</label>
              <input type="text" class="form-control" name="nome"  placeholder="Seu Nome">
            </div>

            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="email" placeholder="Seu Email">
            </div>

            <div class="form-group">
              <label for="senha">Senha</label>
              <input type="password" class="form-control" name="password" placeholder="Sua Senha">
            </div>

            <button type="submit" class="btn btn-primary btn-block">Cadastrar</button>
          </form>

          
  
